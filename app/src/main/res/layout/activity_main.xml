<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="@string/number_one"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="num"/>
    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:text="@string/roll"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/text_hello"
        app:layout_constraintStart_toStartOf="@id/text_hello"
        app:layout_constraintEnd_toEndOf="@id/text_hello"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="10dp"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        app:layout_constraintHeight="150dp"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toTopOf="@+id/text_hello"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_hello"
        tools:srcCompat="@drawable/dice_1" />

</androidx.constraintlayout.widget.ConstraintLayout>